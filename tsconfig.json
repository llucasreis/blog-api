{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@adapters/*": [
        "adapters/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@main/*": [
        "main/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ],
      "@tests/*": [
        "../tests/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}